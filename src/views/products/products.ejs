    <link rel="stylesheet"  href="/css/styleProducto.css">
</head>
<body>
    <%- include('../partials/header')%>
<main>
    <div class="caja">
        <div class="cajaProducto">
                <section class="fotos">
                    <section class="vistas">
                        <picture class="fotopeque">
                            <img src="/images/ringo.png" alt="Producto1">
                        </picture>
                        <picture class="fotopeque">
                            <img src="/images/ringo.png" alt="Producto2">
                        </picture>
                        <picture class="fotopeque">
                            <img src="/images/ringo.png" alt="Producto3">
