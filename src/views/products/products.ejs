            <h1 class="recomendados">Recomendados</h1>
        <section class="recomendacion">
            <article>
                <img src="images/comidaperros.png" alt="Cafetera" class="product_img">
                <div class="main-article">
                    <i class="fas fa-truck"></i>
                    <div class="flex-row">
                    <p class="price">$6.770</p>
                    <p class="discount">40% off</p>
                </div>
                    <h4 class="description">Cafetera Moulinex</h4>
                </div>
            </article>
            <article>
                <img src="images/comidaperros.png" alt="MacBook" class="product_img">
                <div class="main-article">
                    <i class="fas fa-truck"></i>
                    <div class="flex-row">
                    <p class="price">$230.000</p>
                    <p class="discount">20% off</p>
                    </div>
                    <h4 class="description">MacBook Pro 2019</h4>
                </div>
            </article>
            <article>
                <img src="images/comidaperros.png" alt="Teléfono Móvil Samsung Galaxy" class="product_img">
                <div class="main-article">
                    <i class="fas fa-truck"></i>
                    <div class="flex-row">
                    <p class="price">$70.500</p>
                    <p class="discount">10% off</p>
                    </div>
                    <h4 class="description">Samsung Galaxy S10</h4>
                </div>
            </article>
            <article>
                <img src="images/comidaperros.png" alt="SmartTv Samsung" class="product_img">
                <div class="main-article">
                    <i class="fas fa-truck"></i>
                    <div class="flex-row">
                    <p class="price">$23.200</p>
                    <p class="discount">5% off</p>
                    </div>
                    <h4 class="description">SmartTv Samsung 43"</h4>
                </div>
            </article>
        </section>
    </div>
    </div>
</main>

<%- include('../partials/footer')%>
</body>
</html>