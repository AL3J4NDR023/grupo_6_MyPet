<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Productos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet"  href="/css/styleProducto.css">
</head>
<body>
    <%- include('../partials/header')%>
<main>
    <section class="last-visit">
        <h2>Productos</h2>
        <div class="products" >
            <% products.forEach(product =>{
                let finalPrice = (product.price*((100-product.discount)/100)).toFixed(0)%>
            <article>
                <a href="/products/detail/<%= product.id %>">
                <img src="images/<%= product.image%>" alt="Cafetera" class="product_img">
                <div class="main-article">
                    <i class="fas fa-truck"></i>
                    <div class="flex-row">
                    <p class="price">$<%= product.price%></p>
                    <p class="discount"><%= product.discount%>0% off</p>
                </div>
                    <h4 class="description"><%= product.name%></h4>
                </div>
            </a>
           
            </article>
            <% });%>
        </div>
       
    </section>
   
</main>
<%- include('../partials/footer')%>
</body>
</html>