<!DOCTYPE html>
<html lang="en">
    <head>
		<%- include('./partials/head')%>
    </head>
<body>
    <%- include('./partials/header')%>
    <section id="container">
		
		<h1 class="text-center">Lista de productos</h1>
		<a href="/admin/newProducto" id="newproducto" class="btn_new px-5 "><button class="btn btn-primary px-2 mb-2">Crear Producto</button></a>
		
		
        <div class="container">
		<table class="table table-hover border border-2">
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Categorias</th>
				<th>Colores</th>
				<th>Precio</th>
				<th>Cantidad</th>
				<th>Marca</th>
				<th>FOTOS</th>
				<th>Acciones</th>
			</tr>
			<% products.forEach(product =>{%>
				<tr>
					
					<td><%= product.id%></td>
					<td><%= product.name%></td>
					<td><%= product.category%></td>
					<td>ninguno</td>
					<td><%= product.price%></td>
					<td><%= product.amount%></td>
					<td><%= product.idBrand%></td>
					<td><%= product.image%></td>
					<td>
						<div class="d-flex gap-2">
						<a class="link_edit" href="/products/edit/<%=product.id%>"><button class="btn btn-success">Editar</button></a>

						<form action="/products/delete/<%=product.id%>?_method=delete" method="POST">
							<button type="submit"class="btn btn-danger">Borrar</button>
						</form>
					</div>
					</td>
					<%})%>
				</tr>
				
        </table>
        </div>
    </section>
	<%- include('./partials/footer')%>
</body>
</html>