<!DOCTYPE html>
<html lang="en" >
<head>
  <%- include('./partials/head')%>
</head>
<body style="display:inline-block; overflow-x:hidden" class="">
  <%- include('./partials/header')%>
  <div class="login" id="form-login">
    
  </div>
<main>
  <section class="main-container">
      <img src="../images/background20212207143933.jpg" class="img-fluid  mx-auto d-block w-100 "  alt="...">
  </section>
  

  <div class="d-flex justify-content-evenly">
    <div class="p-2 bd-highlight"><a href="#"><img src="../images/PERRO_DESK.webp" class="img-fluid"></a></div>
    <div class="p-2 bd-highlight"><a href="#"><img src="../images/GATOS_DESK.webp"class="img-fluid"></a></div> 
  </div>

  <div class="d-flex justify-content-sm-evenly mt-5">
    <div class="p-2 bd-highlight text-center "><a href="/category/1" class="text-decoration-none text-reset"><img src="../images/categorias/categoria_alimento-min.png" class="img-fluid rounded-circle "><h3 >Alimentos</h3></a></div>
    <div class="p-2 bd-highlight text-center"><a href="/category/2" class="text-decoration-none text-reset"><img src="../images/categorias/categoria_accesorios.png"class="img-fluid rounded-circle"><h3>Accesorios</h3></a></div> 
    <div class="p-2 bd-highlight text-center"><a href="/category/3" class="text-decoration-none text-reset"><img src="../images/categorias/categoria_snacks-min.png"class="img-fluid rounded-circle"><h3>Snacks</h3></a></div> 
    <div class="p-2 bd-highlight text-center"><a href="/category/4" class="text-decoration-none text-reset"><img src="../images/categorias/categoria_juguetes.png"class="img-fluid rounded-circle"><h3>Juguetes</h3></a></div> 
    <div class="p-2 bd-highlight text-center"><a href="/category/5" class="text-decoration-none text-reset"><img src="../images/categorias/categoria_higiene.jpg"class="img-fluid rounded-circle"><h3>Higiene</h3></a></div> 
  </div>

  <h2 class="text-center mt-5">Productos</h2>
  <div class="row row-cols-1 row-cols-md-4 g-4 px-5 mt-2 mb-3 ">
    <% for( let i = 0; i < products.length; i++ ){%>
    <div class="col">
      
      <div class="card h-100" >
        <img src="../images/products/<%= products[i].image%>" class="card-img-top mx-auto mt-3" style="width:50%" alt="...">
        <div class="card-body">
          <h5 class="card-title text-center"><%=products[i].name%></h5>
          <h5 class="card-title text-center">$<%=toThousand(products[i].price)%></h5>
          
          <div class="position-absolute top-100 start-50 translate-middle"> <a href="/producto/detalle/<%=products[i].id%>"><small class="text-muted"><button class="btn text-dark" style="background-color:#c8ee3d"><strong>Ver producto</strong></button></small></a></div>
        
        </div>
        
      </div>
    </div>
    <% } %>
    
    
  
  </div>
 
    
    
  
  </div>

</main>
<%- include('./partials/footer')%>
<script src="./js/index.js"></script>
</body>
</html>